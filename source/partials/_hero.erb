<div class="hero <%= variant %>" role="banner" style="background-image: url(<%= image_path("moods/" + locals[:background_image] || "moods/defacto.jpg") %>)">
  <div class="hero-inner">

    <% if locals[:title] || locals[:sub_title] %>

      <div class="row">

        <% if locals[:title] %>
          <%= content_tag title_tag ||= :h1, class: "title" do title end %>
        <% end %>
        <% if locals[:sub_title] %>
          <%= content_tag :h2, class: "sub-title" do sub_title end %>
        <% end %>

      </div>

    <% end %>

  </div>
</div>
