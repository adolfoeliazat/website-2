<% unless config[:staging] %>
Sitemap: <%= full_url("sitemap.xml") %>
<% end %>

User-agent: *

<% if config[:staging] %>
Disallow: /
<% else %>
  <% sitemap.resources.select { |page|
    page.path =~ /\.html/ &&
    page.metadata[:options][:lang] == I18n.locale &&
    page.data.robots && page.data.robots.include?("noindex")
    }.each do |page| -%>
Disallow: <%= page.url %>
  <% end -%>
<% end -%>
