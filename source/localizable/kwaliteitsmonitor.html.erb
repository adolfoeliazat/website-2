---
title:
  nl: CAPP Kwaliteitsmonitor
description:
  nl: Automatiseer het vinken
lang_ignore: en, de
---

<div class="hero">
  <div class="hero-inner">
    <div class="hero-copy">

      <%= image_tag t("kwaliteitsmonitor.logo"), title: t("kwaliteitsmonitor.name"), alt: t("kwaliteitsmonitor.name"), class: "km-logo" %>

      <h1><%= t("kwaliteitsmonitor.hero.text_md") %></h1>

      <%= image_tag t("kwaliteitsmonitor.hero.image"), title: t("kwaliteitsmonitor.name"), alt: t("kwaliteitsmonitor.name") %>

    </div>
  </div>
</div>

<section>
  <article>
    <div class="row">

      <%= partial "kwaliteitsmonitor/kwaliteitsmonitor" %>

    </div>
  </article>
</section>

<% if data.downloads.kwaliteitsmonitor_productsheet[I18n.locale] %>
  <section class="cta-bottom gray" id="download">
    <div class="row">

      <h3><%= t("kwaliteitsmonitor.cta_bottom.heading_md") %></h3>

      <form class="form-inline" accept-charset="UTF-8" action="<%= t("urls.km_productsheet") %>" method="POST">
        <input type="hidden" name="utf8" value="âœ“">
        <input type="hidden" name="form" value="<%= t("kwaliteitsmonitor.cta_bottom.formkeep_title") %>">
        <input type="text" name="name" placeholder="<%= t("form.name") %>">
        <input type="text" name="organisation" placeholder="<%= t("form.organisation") %>" required>
        <input class="required" type="email" name="email" placeholder="<%= t("form.email") %>" required>
        <input type="hidden" name="download" value="<%= full_url(data.downloads.kwaliteitsmonitor_productsheet[I18n.locale]) %>">
        <button type="submit"><%= t("actions.download_productsheet") %>&nbsp;&nbsp;<span class="icon-pdf"></span></button>
      </form>

    </div>
  </section>
<% end %>

<%= partial "clients/clients-section" %>
