<section class="cta-bottom gray" id="contact-request">
  <div class="row">

    <p>
      <%= image_tag "team/albert-dijkslag.jpg", class: "avatar", alt: "Albert Dijkslag - Customer Relationshop Manager" %>
    </p>

    <h3>
      <%= t("albert.cta_heading") %>
    </h3>

    <form class="form-contact" accept-charset="UTF-8" action="<%= t("urls.contact") %>" method="POST">
      <input type="hidden" name="utf8" value="✓">
      <input type="hidden" name="form" value="Contact - Fördermittel">
      <input type="text" name="name" placeholder="<%= t("form.name") %> *" required>
      <input type="text" name="organisation" placeholder="<%= t("form.organisation") %> *" required>
      <input type="email" name="email" placeholder="<%= t("form.email") %> *" required>
      <input type="tel" name="telephone" placeholder="<%= t("form.phone") %>">
      <textarea rows="6" name="message" placeholder="<%= t("form.message") %>"></textarea>
      <button type="submit"><%= t("form.submit") %></button>
    </form>

  </div>
</section>
