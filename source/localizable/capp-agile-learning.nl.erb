<section class="info-request gray" id="info-request">

  <div class="row">

    <div class="col">

      <h2><%= t("capp-agile.form_heading") %></h2>

      <form class="form-contact" accept-charset="UTF-8" action="<%= t("urls.capp_agile") %>" method="POST">
        <input type="hidden" name="utf8" value="âœ“">
        <input type="hidden" name="form" value="Contact - CAPP Agile Learning">

        <input type="email" name="email" placeholder="<%= t("form.email") %>" required>

        <h3><%= t("capp-agile.options.heading") %></h3>
        <div class="checkbox">
          <input type="checkbox" name="info" id="info" checked>
          <label for="info"><%= t("capp-agile.options.info") %></label>
        </div>
        <div class="checkbox">
          <input type="checkbox" name="demo" id="demo">
          <label for="demo"><%= t("capp-agile.options.demo") %></label>
        </div>
        <div class="checkbox">
          <input type="checkbox" name="trial" id="trial">
          <label for="trial"><%= t("capp-agile.options.trial") %></label>
        </div>
        <div class="checkbox">
          <input type="checkbox" name="inform" id="inform">
          <label for="inform"><%= t("capp-agile.options.inform") %></label>
        </div>

        <button type="submit"><%= t("form.submit") %></button>
      </form>

    </div>

    <div class="col">
      <%= image_tag "screenshots/capp-agile-demo.png", title: t("capp-agile.info_img"), alt: t("capp-agile.info_img") %>
    </div>

  </div>

</section>

