<section class="team">
  <ol>

    <% data.team.sort_by { |p| p.lastname.downcase }.each do |person| %>

      <li>
        <% if href = team_avatar_url(person) %>
          <%= image_tag href, alt: "#{person.firstname} #{full_last_name(person)}", title: "#{person.firstname} #{full_last_name(person)}", class: "avatar" %>
        <% else %>
          <div class="avatar no-image"></div>
        <% end %>
        <h5>
          <span><%= person.firstname %></span>
          <span><%= full_last_name(person) %></span>
        </h5>
      </li>
    <% end %>

    <li class="you">

      <% unless root_locale == :en %>
        <% locale_link_to("/jobs/index.html") do %>
          <div class="avatar"><%= t("about.team.you") %></div>
          <h5>
            <span><%= t("about.team.work_with_us") %></span>
            <span>Defacto</span>
          </h5>
        <% end %>
      <% end %>
    </li>

  </ol>
</section>
