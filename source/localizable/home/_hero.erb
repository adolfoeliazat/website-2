<div class="hero">
  <div class="hero-inner">
    <div class="hero-copy">

      <% if root_locale == :en %>

        <h1>
          <%= t("home.hero.title") %>
        </h1>

        <%= link_to t("actions.home.demo"), "/demo-aanvragen.html", class: "button" %>

      <% else %>

        <%= image_tag "logos/capp-new-version-white.svg", alt: "CAPP LMS", class: "logo" %>

        <h1>
          <%= t("home.hero_capp.title") %>
        </h1>

        <h2>
          <%= t("home.hero_capp.text") %>
        </h2>

        <%= link_to t("actions.read_more_2"), "/capp-lms.html", class: "button pink" %>

          <% if root_locale == :nl %>

            <%= link_to t("actions.home.test"), "/wat-voor-lms-past-bij-mij.html", class: "button white-pink" %>

          <% else %>

            <%= link_to t("actions.home.demo"), "/demo-aanvragen.html", class: "button white-pink" %>

          <% end %>

      <% end %>

    </div>
