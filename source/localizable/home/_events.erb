<section class="events">
  <div class="row">

   <h2>Treffen Sie uns hier:</h2>

   <div class="event-item">

    <div class="col left">
      <p>
        <%= image_tag "logos/defacto.png", alt: "Defacto", title: "Defacto" %>
      </p>
      <p>
        <a href="http://www.zeq.de" target="_blank" rel="noopener">
          <%= image_tag "events/logo-zeq.png", alt: "ZeQ", title: "ZeQ" %>
        </a>
      </p>
    </div>

      <div class="col right">
        <h3>
          Workshop: Innovative Lernumgebung für eine lückenlose Qualitätssicherung
        </h3>

        <h5>
          Wie Sie mit digitalen Lösungen Ihr Personal im Krankenhaus entwickeln und qualifizieren
        </h5>

        <p class="info">
          09. März 2018 | Friedrich-Ebert-Krankenhaus, Neumünster
        </p>

        <div class="cta-appointment">

          <button class="button outline appointment-button"><%= t("actions.register") %></button>

            <form class="form-contact" accept-charset="UTF-8" action="<%= t("urls.appointment") %>" method="POST">
              <input type="hidden" name="utf8" value="✓">
              <input type="hidden" name="form" value="register">
              <input type="text" name="name" placeholder="<%= t("form.name") %>" required>
              <input type="text" name="company" placeholder="<%= t("form.organisation") %>" required>
              <input type="email" name="email" placeholder="<%= t("form.email") %>" required>
              <button type="submit"><%= t("actions.register") %></button>
            </form>
        </div>

      </div>

    </div>

  </div>
</section>
