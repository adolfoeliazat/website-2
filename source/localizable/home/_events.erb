<section class="events">
  <div class="row">

    <h2>Treffen Sie uns hier:</h2>

    <div class="event-item">

      <div class="col left">
        <a href="http://www.gesundheitswirtschaftskongress.de/" target="_blank" rel="noopener">
          <%= image_tag "events/gesundheitswirtschaftskongress-2017.png", alt: "13. Gesundheitswirtschaftskongress", title: "13. Gesundheitswirtschaftskongress" %>
        </a>

      </div>

      <div class="col right">
        <h3>
          13. Gesundheitswirtschaftskongress
        </h3>

        <p class="info">
          20. und 21. September 2017 | Grand Elysee, Hamburg
        </p>

        <div class="cta-appointment">

          <button class="button outline appointment-button"><%= t("actions.make_appointment") %></button>

          <form class="form-contact" accept-charset="UTF-8" action="<%= t("urls.appointment") %>" method="POST">
            <input type="hidden" name="utf8" value="âœ“">
            <input type="hidden" name="form" value="Make appointment">
            <input type="text" name="name" placeholder="<%= t("form.name") %>">
            <input type="text" name="company" placeholder="<%= t("form.organisation") %>">
            <input type="email" name="email" placeholder="<%= t("form.email") %>" required>
            <button type="submit"><%= t("actions.make_appointment") %></button>
          </form>

        </div>
      </div>

    </div>

  </div>
</section>
