<%
featured = blog("blog").local_articles.find { |item| item.metadata[:page]["featured"] rescue false }

if featured
  author = blog_author(featured)
  author_name = author ? "#{author.firstname} #{author.prefix} #{author.lastname}" : featured.data.author
%>

  <div class="row blog blog-featured">
    <div class="headline">
      <h2><%= t("blog.title") %></h2>
    </div>

    <%= partial "blog/blog-article-preview", locals: { article: featured } %>

    <%= link_to t("blog.more_on_our_blog"), "/blog/", class: "button blue outline" %>
  </div>

<% end %>
