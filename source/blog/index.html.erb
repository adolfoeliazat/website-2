pageable: true
---

<section class="row">

    <ol class="blog-list">
      <% page_articles.each_with_index do |article, i| %>
        <li>

          <div class="col left">
            <%= link_to image_tag(article.data.featured_image, alt: article.title), article.url %>
          </div>

          <div class="col right">

            <article>
              <header class="post-header">
                <h2><%= link_to article.title, article.url %></h2>
              </header>

              <div class="post-body">
                <%= Nokogiri::HTML(article.summary).text %>
                <%= link_to t("blog.read_more"), article.url, class: "read-more" %>
              </div>

              <footer class="post-footer">
                <div class="post-meta">
                  <%
                  author = blog_author(article)
                  author_name = author ? "#{author.firstname} #{author.prefix} #{author.lastname}" : article.data.author
                  %>
                  <% if author && src = team_avatar_url(author) %>
                    <div class="author-avatar">
                      <%= image_tag src, alt: author_name, class: "avatar" %>
                    </div>
                  <% end %>
                  <div class="author">
                    <span class="author-name"><%= author_name %></span>
                    <time datetime="<%= article.date.strftime('%F') %>"><%= I18n.l(article.date, format: "%e %B %Y", locale: I18n.locale.to_s) %></time>
                  </div>
                </div>
              </footer>
            </article>

          </div>
        </li>
      <% end %>
    </ol>

    <% if paginate && num_pages > 1 %>
      <div class="text-center">
        <ul class="pagination">
          <% if prev_page %>
            <li><%= link_to t("blog.prev"), prev_page, class: 'page-step prev' %></li>
          <% end %>

          <% for page in 1..num_pages %>
            <% if page == page_number %>
              <li class="current"><%= page %></li>
            <% else %>
              <% append = page == 1 ? nil : "#{page}/" %>
              <li><%= link_to page, "/blog/#{append}" %></li>
            <% end %>
          <% end %>

          <% if next_page %>
            <li><%= link_to t("blog.next"), next_page, class: 'page-step next' %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

</section>
