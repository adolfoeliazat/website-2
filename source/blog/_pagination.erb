<% if paginate && num_pages > 1 %>
  <div class="pagination">
    <ul>
      <% if prev_page %>
        <li><%= link_to "", prev_page, class: "page-step icon-chevron-left" %></li>
      <% end %>

      <% for page in 1..num_pages %>
        <% if page == page_number %>
          <li class="current">
            <span><%= page %></span>
          </li>
        <% else %>
          <%
          page_url = "/blog/"
          page_url << "tags/#{tagname.downcase}/" if defined?(tagname)
          page_url << "#{page}/" unless page == 1
          %>
          <li><%= link_to page, page_url %></li>
        <% end %>
      <% end %>

      <% if next_page %>
        <li><%= link_to "", next_page, class: "page-step icon-chevron-right" %></li>
      <% end %>
    </ul>
  </div>
<% end %>
