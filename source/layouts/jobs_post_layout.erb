<% wrap_layout :layout do %>

<article class="post">
  <header class="jobs-header" style="background-image: url(<%= image_path(current_article.data.header_image || "moods/defacto-pand.jpg") %>)">
    <div class="row">
      <h1><%= current_article.title %></h1>
    </div>
  </header>

  <div class="row post-body">
    <div class="col">
      <%= yield %>
      <p>
        <strong><em><%= t("jobs.acquisition") %></em></strong>
      </p>
    </div>

    <div class="col">

      <%= partial "social-share" %>

    </div>

    <div class="col">

      <div class="job-form">

        <h2><%= t("jobs.form.header") %></h2>
        <p>
          <%= t("jobs.form.text") %>
        </p>
        <form class="form-contact" accept-charset="UTF-8" action="<%= t("urls.job_apply") %>" method="POST">
          <input type="hidden" name="utf8" value="âœ“">
          <input type="hidden" name="form" value="job-application">
          <input type="hidden" name="vacature" value="<%= page_title current_page %>">
          <div class="form-name">
            <input type="text" name="first_name" placeholder="<%= t("form.first_name") %>">
          </div>
          <div class="form-company">
            <input type="text" name="sur_name" placeholder="<%= t("form.sur_name") %>">
          </div>
          <div class="form-phone">
            <input type="tel" name="phone" placeholder="<%= t("form.phone") %>">
          </div>
          <div class="form-email">
            <input type="email" name="email" placeholder="<%= t("form.email") %>" required>
          </div>
          <div class="form-text">
            <textarea rows="6" name="message" placeholder="<%= t("form.job_message") %>"></textarea>
          </div>
          <div class="form-actions">
            <button type="submit"><%= t("form.submit") %></button>
          </div>
        </form>
      </div>
    </div>

  </div>

</article>

<section class="post-related gray">
  <div class="row">
    <h3><%= t("jobs.more.header") %></h3>

    <ol class="blog-list">
      <% (blog.articles - [current_article]).each do |article| %>
        <%= partial "jobs/job-preview", locals: { article: article } %>
      <% end %>
    </ol>

  </div>
</section>

<% end %>
