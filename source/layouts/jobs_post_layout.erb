<% wrap_layout :layout do %>

<article class="job">
  <header class="jobs-header" style="background-image: url(<%= image_path(current_article.data.header_image || "moods/defacto-pand.jpg") %>)">
    <div class="row">
      <div class="col">
        <h1><%= current_article.title %></h1>
      </div>
    </div>
  </header>

  <div class="row post-body">
    <div class="col">
      <%= yield %>
    </div>

    <div class="col">

      <% if current_article.data.apply_link %>

        <%= link_to t("jobs.form.apply"), "https://defacto.homerun.co/#{current_article.data.apply_link}/#{root_locale.to_s}/apply",
            class: "button apply",
            target: "_blank",
            rel: "noopener" %>

      <% else %>

        <%= partial "jobs/apply-form" %>

      <% end %>

    </div>

    <div class="col">
      <p>
        <strong><em><%= t("jobs.acquisition") %></em></strong>
      </p>
    </div>

    <div class="col">
      <%= partial "partials/social-share" %>
    </div>

  </div>
</article>

<section class="jobs-related">
  <div class="row">
    <div class="col">
      <h3><%= t("jobs.more.header") %></h3>
      <ol class="jobs-list">
        <% (blog.articles - [current_article]).each do |article| %>
          <%= partial "jobs/job-preview", locals: { article: article } %>
        <% end %>
      </ol>
    </div>
  </div>
</section>

<% end %>
